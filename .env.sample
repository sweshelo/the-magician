NEXT_PUBLIC_SERVER_HOST="localhost:5000"
NEXT_PUBLIC_SECURE_CONNECTION="true"
NEXT_PUBLIC_SOUNDPATH="/sound/se"
NEXT_PUBLIC_IMAGE_SELF_HOSTING="false"
NEXT_PUBLIC_IMAGE_SIZE="normal" # "thum" | "normal" | "full"

# Supabase設定
# Supabaseダッシュボードから取得: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# サーバーサイド専用（プレイ回数制限のRLS回避用）
# SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# 認証スキップモード（ローカル開発用）
# "true"に設定するとSupabase認証をスキップしてモックユーザーでログイン
NEXT_PUBLIC_AUTH_SKIP="false"
